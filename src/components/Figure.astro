---
import { Picture } from "astro-imagetools/components"

export interface Props {
	src: string
	alt: string
	width?: string
	height?: string
	caption?: string
}

const { src, width, height, alt, caption } = Astro.props as Props
---

<figure>
	<Picture alt={alt} src={`/images/${src}`} width={width} height={height} />
	{
		(() => {
			if (caption !== undefined) return <figcaption set:html={caption} />
		})()
	}
</figure>
