---
import { Picture } from "astro-imagetools/components";

export interface Props {
source: string;
alt: string;
caption?: string;
}

const {
	source, alt, caption
} = Astro.props as Props;
---

<figure>
	<Picture alt={alt} src={source} />
	{caption ? (<figcaption>{caption}</figcaption>) : null}
</figure>

<style>
	figcaption {
		text-align: center;
		margin-top: var(--size-2);
		font-style: italic;
		color: var(--muted);
	}
</style>