---
import { Img } from "astro-imagetools/components";
import Label from "./Label.astro";

export interface Props {
  url: string;
  title: string;
  image?: string;
  alt: string;
  label: string;
  datePublished?: string;
}

const { url, title, image, alt, label } = Astro.props;
---

<div class={image ? "tile tile-has-img" : "tile"}>
  <figure class="tile-thumb">
    <Img src={image} layout="fill" alt={alt ? `${alt}` : ` `} />
  </figure>
  <div class="tile-content">
    <h2 class="tile-title">
      <a href={url} class="tile-link link-block">{title}</a>
    </h2>
  </div>

  <Label className="label-overlay" name={label} />
 
</div>

<style>
  .tile {
    /* border-radius: var(--border-radius-rounded); */
    overflow: hidden;
    position: relative;
    z-index: var(--layer-0);
    min-height: var(--base-amount);
    display: grid;
    grid-template-rows: 1fr min-content;
    padding: var(--space-lg);
  }

  .tile .label {
    grid-row: 1;
    justify-self: end;
    align-self: start;
  }

  .tile-thumb {
    z-index: var(--layer-01);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .tile-thumb::before {
    content: "";
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    /* opacity: 0.5; */
    background-image: linear-gradient(
      45deg,
      var(--color-red) 0%,
      #00000000 35%,
      #00000000 65%,
      var(--color-blue) 100%
    );
  }

  :global(.tile-thumb img),
  .tile-img {
    /* filter: grayscale(0) contrast(1); */
    /* mix-blend-mode: lighten; */
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .tile-title {
    font-size: var(--font-size-md);
    line-height: calc(var(--line-height-body) * var(--space-xl));
  }

  .tile-title a {
    text-decoration: none;
    font-weight: var(--font-weight-500);
    background: linear-gradient(
      to right,
      var(--color-primary) 50%,
      var(--color-background) 50%
    );

    box-decoration-break: clone;
    padding: var(--space-2xs) var(--space-sm);
    background-size: 200% 100%;
    background-repeat: no-repeat;
    background-position: 100% 100%;
    transition: background-position 0.3s;


  }

  @media (--mouse) {
  .tile-title a {
    &:hover,
    &:focus {
      color: var(--color-background);
      background-position: 0% 100%;
    } 
  }
}

  .tile-content {
    align-self: end;
  }




  @media (--motion) {
    .tile {
      transition: 200ms ease transform, 200ms ease box-shadow;
      transform: scale(1);
      box-shadow: var(--box-shadow-0);
    }
    .tile-thumb {
      opacity: 0.7;
      transition: 400ms ease opacity;
    }
    .tile:hover,
    .tile:focus-within {
      transform: scale(1.025);
      box-shadow: var(--box-shadow-sm);
    }
    .tile:active {
      transform: scale(1);
      box-shadow: var(--box-shadow-0);
    }
    .tile:hover .tile-thumb {
      opacity: 1;
    }
  }


</style>
