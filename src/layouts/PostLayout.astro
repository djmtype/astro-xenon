---
import DefaultLayout from "@layouts/DefaultLayout.astro"

import PostEntry from "@components/PostEntry.astro"

// import { default as Template } from '../demo/template.mdx';
const Template = await import("@demo/template.mdx")

// import * as Template from "../demo/template.md"

// import {Content as Template} from '../demo/template.md';

const { content } = Astro.props
let canonicalURL = Astro.url

const { title, date, description, image, category, tags } = content
---

<DefaultLayout {title} {description} {canonicalURL}>
	<PostEntry
		{title}
		category={category}
		image={image.path}
		imageCredit={image.credit}
		imageOrigin={image.origin}
		alt={image.alt}
		datePublished={date.published}
		dateUpdated={date.updated}
		{tags}
	>
		<slot></slot>
		<Template.default />
	</PostEntry>
</DefaultLayout>
